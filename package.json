{
  "name": "server",
  "module": "server/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run server/index.ts",
    "dev": "FRONTEND_URL=http://localhost:5173 bun run --hot server/index.ts",
    "test": "bun scripts/run-tests.ts",
    "test:file": "bun test",
    "build": "bun --cwd=frontend run build",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "lint": "bunx eslint .",
    "ci": "bunx prettier --check . && bunx eslint . && bun run test && bun run build"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@kinde-oss/kinde-typescript-sdk": "^2.9.1",
    "drizzle-orm": "^0.39.3",
    "hono": "^4.6.20",
    "nanoid": "^5.1.6",
    "pg": "^8.13.3",
    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "zod": "^4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@flydotio/dockerfile": "^0.7.8",
    "@testcontainers/postgresql": "^11.9.0",
    "@types/bun": "latest",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "testcontainers": "^11.9.0",
    "typescript-eslint": "^8.48.0"
  },
  "trustedDependencies": [
    "protobufjs"
  ]
}
